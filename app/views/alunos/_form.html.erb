<%= form_for(aluno, { :multipart => true }) do |f| %>
  <% if aluno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(aluno.errors.count, "error") %> prohibited this aluno from being saved:</h2>

      <ul>
      <% aluno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :Senha %>
    <%= f.password_field :password_digest %>
  </div>

  <div class="field">
    <%= f.label :semestre %>
    <%= f.select(:semestre, Aluno.possiveis_semestres) %>
  </div>

  <div class="field">
    <%= f.label :curso %>
    <%= f.select(:curso, Curso.all.pluck("nome").map {|nome| nome} ) %>
  </div>

  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :foto %>
    <% if f.object.foto? %>
      <%= foto_tag f.object.foto.thumb.url %>
      <%= f.label :remove_foto %>
      <%= f.check_box :remove_foto %> 
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
