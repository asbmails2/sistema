<table>
	<thead>
		<tr>
			<th>
				Código
				<%= link_to "&#9660".html_safe, disciplinas_path({:sort_by => 'codigo', :sentido => 'DESC'}) %>
				<%= link_to "&#9650".html_safe, disciplinas_path({:sort_by => 'codigo', :sentido => 'ASC'}) %>
					
				</th>
			<th width=450>
				Nome
				<%= link_to "&#9660".html_safe, disciplinas_path({:sort_by => 'nome', :sentido => 'DESC'}) %>
				<%= link_to "&#9650".html_safe, disciplinas_path({:sort_by => 'nome', :sentido => 'ASC'}) %>
					
			</th>
			<th>
				Créditos
				<%= link_to "&#9660".html_safe, disciplinas_path({:sort_by => 'creditos', :sentido => 'DESC'}) %>
				<%= link_to "&#9650".html_safe, disciplinas_path({:sort_by => 'creditos', :sentido => 'ASC'}) %>
					
			</th>
			<th>
				Departamento
				<%= link_to "&#9660".html_safe, disciplinas_path({:sort_by => 'departamento', :sentido => 'DESC'}) %>					
				<%= link_to "&#9650".html_safe, disciplinas_path({:sort_by => 'departamento', :sentido => 'ASC'}) %>
			</th>
		</tr>
	</thead>
	<tbody>
	<%@disciplinas.each do |turma|%>
		<tr>
			<td align="center"><%=turma.codigo%></td>
			<td width=550><%=turma.nome%></td>
			<td align="center"><%=turma.creditos%></td>
			<td align="center"><%=turma.departamento.strip[13..70]%></td>
			
		</tr>
	<%end%>
	</tbody>

</table>
