<%= form_for @curso do |f| %>

	<div class="field">
		Nome: <%= f.text_field :nome %>
	</div>
	<div class="field">
		Código: <%= f.text_field :codigo %>
	</div>
	<div class="field">
		Título: <%= f.text_field :titulo %>
	</div>
	<div class="field">
		Número de créditos: <%= f.number_field :creditos %>
	</div>
	<div class="field">
		Turno: <%= f.select :turno, options_for_select([ "Diurno", "Noturno" ], "Diurno") %>
	</div>
	<div class="field">
		Modalidade: <%= f.select :modalidade, options_for_select([ "Presencial", "Distancia" ], "Presencial") %>
	</div>

	<div class="actions">
    	<%= f.submit "Adicionar curso" %>
  	</div>

<%end%>
